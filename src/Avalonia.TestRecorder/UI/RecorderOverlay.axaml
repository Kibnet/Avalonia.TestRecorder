<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="Avalonia.TestRecorder.UI.RecorderOverlay"
             Background="#F0F0F0"
             BorderBrush="#C0C0C0"
             BorderThickness="0,0,0,1"
             Height="40">
    <Border Padding="8,4">
        <StackPanel Orientation="Horizontal" Spacing="8">
            <!-- Status Icon -->
            <Viewbox Width="24" Height="24" VerticalAlignment="Center" Name="StatusIcon">
                <Canvas Width="24" Height="24">
                    <!-- Default: Off -->
                    <Ellipse Width="16" Height="16" Canvas.Left="4" Canvas.Top="4" Fill="#808080" Name="IconOff"/>
                    <!-- Recording: Red Circle -->
                    <Ellipse Width="16" Height="16" Canvas.Left="4" Canvas.Top="4" Fill="#E74C3C" Name="IconRecording" IsVisible="False"/>
                    <!-- Paused: Yellow Square -->
                    <Rectangle Width="16" Height="16" Canvas.Left="4" Canvas.Top="4" Fill="#F39C12" Name="IconPaused" IsVisible="False"/>
                </Canvas>
            </Viewbox>

            <!-- Step Counter -->
            <TextBlock Text="0 steps" 
                       Name="StepCounter"
                       VerticalAlignment="Center" 
                       FontSize="12"
                       MinWidth="60"/>

            <!-- Separator -->
            <Border Width="1" Height="24" Background="#C0C0C0" VerticalAlignment="Center"/>

            <!-- Record/Stop Button -->
            <Button Name="RecordButton" 
                    Width="32" Height="32" 
                    Padding="4"
                    ToolTip.Tip="Start/Stop Recording (Ctrl+Shift+R)">
                <Viewbox Width="20" Height="20">
                    <Canvas Width="24" Height="24">
                        <!-- Play Icon -->
                        <Path Fill="#27AE60" Name="PlayIcon" Data="M8,5.14V19.14L19,12.14L8,5.14Z"/>
                        <!-- Stop Icon -->
                        <Rectangle Width="14" Height="14" Canvas.Left="5" Canvas.Top="5" Fill="#E74C3C" Name="StopIcon" IsVisible="False"/>
                    </Canvas>
                </Viewbox>
            </Button>

            <!-- Pause/Resume Button -->
            <Button Name="PauseButton" 
                    Width="32" Height="32" 
                    Padding="4"
                    ToolTip.Tip="Pause/Resume (Ctrl+Shift+P)">
                <Viewbox Width="20" Height="20">
                    <Canvas Width="24" Height="24">
                        <!-- Pause Icon -->
                        <Rectangle Width="4" Height="14" Canvas.Left="7" Canvas.Top="5" Fill="#F39C12" Name="PauseIcon"/>
                        <Rectangle Width="4" Height="14" Canvas.Left="13" Canvas.Top="5" Fill="#F39C12"/>
                    </Canvas>
                </Viewbox>
            </Button>

            <!-- Clear Button -->
            <Button Name="ClearButton" 
                    Width="32" Height="32" 
                    Padding="4"
                    ToolTip.Tip="Clear recorded steps">
                <Viewbox Width="20" Height="20">
                    <Canvas Width="24" Height="24">
                        <!-- Trash Icon -->
                        <Path Fill="#95A5A6" Data="M9,3V4H4V6H5V19A2,2 0 0,0 7,21H17A2,2 0 0,0 19,19V6H20V4H15V3H9M7,6H17V19H7V6M9,8V17H11V8H9M13,8V17H15V8H13Z"/>
                    </Canvas>
                </Viewbox>
            </Button>

            <!-- Save Button -->
            <Button Name="SaveButton" 
                    Width="32" Height="32" 
                    Padding="4"
                    ToolTip.Tip="Save as... (Ctrl+Shift+S)">
                <Viewbox Width="20" Height="20">
                    <Canvas Width="24" Height="24">
                        <!-- Save Icon -->
                        <Path Fill="#3498DB" Data="M15,9H5V5H15M12,19A3,3 0 0,1 9,16A3,3 0 0,1 12,13A3,3 0 0,1 15,16A3,3 0 0,1 12,19M17,3H5C3.89,3 3,3.9 3,5V19A2,2 0 0,0 5,21H19A2,2 0 0,0 21,19V7L17,3Z"/>
                    </Canvas>
                </Viewbox>
            </Button>

            <!-- Separator -->
            <Border Width="1" Height="24" Background="#C0C0C0" VerticalAlignment="Center"/>

            <!-- Close Button -->
            <Button Name="CloseButton" 
                    Width="32" Height="32" 
                    Padding="4"
                    ToolTip.Tip="Hide overlay">
                <Viewbox Width="20" Height="20">
                    <Canvas Width="24" Height="24">
                        <!-- Close Icon -->
                        <Path Fill="#95A5A6" Data="M19,6.41L17.59,5L12,10.59L6.41,5L5,6.41L10.59,12L5,17.59L6.41,19L12,13.41L17.59,19L19,17.59L13.41,12L19,6.41Z"/>
                    </Canvas>
                </Viewbox>
            </Button>
        </StackPanel>
    </Border>
</UserControl>
